= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :isbn
    = f.text_field :isbn
  .field
    = f.label :bookName
    = f.text_field :bookName
  .field
    = f.label :authName
    = f.text_field :authName
  .field
    = f.label :bookEdition
    = f.text_field :bookEdition
  .field
    = f.label :bookYear
    = f.number_field :bookYear
  .field
    = f.label :bookAction
    = f.text_field :bookAction
  .actions
    = f.submit 'Save'
